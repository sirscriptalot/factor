SITE_CFLAGS += -mwindows
CFLAGS_CONSOLE += -mconsole
SHARED_FLAG = -shared
SHARED_DLL_EXTENSION=.dll

LIBS = -lm

PLAF_DLL_OBJS += "$(OUTPUT_DIR)/os-windows.o" "$(OUTPUT_DIR)/mvm-windows.o"
PLAF_EXE_OBJS += "$(OUTPUT_DIR)/resources.o" "$(OUTPUT_DIR)/main-windows.o"
PLAF_MASTER_HEADERS += vm/os-windows.hpp

EXE_SUFFIX=
EXE_EXTENSION=.exe
DLL_SUFFIX=
DLL_EXTENSION=.dll
CONSOLE_EXTENSION=.com

LINKER = $(CPP) -shared -o 
LINK_WITH_ENGINE = -l$(DLL_PREFIX)factor$(DLL_SUFFIX)
